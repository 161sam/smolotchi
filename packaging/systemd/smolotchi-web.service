[Unit]
Description=Smolotchi Web UI
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=smolotchi
Group=smolotchi
WorkingDirectory=/opt/smolotchi
EnvironmentFile=/etc/smolotchi/smolotchi.env
ExecStart=/opt/smolotchi/.venv/bin/python -m smolotchi.cli --config /etc/smolotchi/config.toml web
Restart=on-failure
RestartSec=2

[Install]
WantedBy=multi-user.target
