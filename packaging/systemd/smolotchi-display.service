[Unit]
Description=Smolotchi ePaper display daemon
After=network.target

[Service]
User=pi
WorkingDirectory=/home/pi/smolotchi
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/pi/smolotchi/.venv/bin/python -m smolotchi.display.displayd
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
